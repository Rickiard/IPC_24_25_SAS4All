@model SAS4ALL.Models.CarregamentosViewModel

<style>
    .mbway-form-wrapper {
        font-family: Arial, sans-serif;
        background-color: #fefefe;
        padding: 40px 0;
    }

        .mbway-form-wrapper .container {
            max-width: 500px;
            margin: 0 auto;
            border: 2px solid #00c2ff;
            padding: 30px;
            border-radius: 8px;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .mbway-form-wrapper h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .mbway-form-wrapper form div {
            margin-bottom: 20px;
        }

        .mbway-form-wrapper label {
            display: block;
            font-weight: bold;
            color: #007700; /* Cor verde mais escura para melhor contraste (4.5:1) */
            margin-bottom: 5px;
        }

        .mbway-form-wrapper input[type="tel"],
        .mbway-form-wrapper input[type="number"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #aaa;
            border-radius: 4px;
            font-size: 16px;
        }

        .mbway-form-wrapper span {
            font-size: 14px;
            color: #333;
            display: block;
            margin-top: 5px;
        }

        .mbway-form-wrapper button,
        .mbway-form-wrapper a {
            padding: 10px 20px;
            font-size: 16px;
            text-decoration: none;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            margin-right: 10px;
        }

        .mbway-form-wrapper button {
            background-color: #a5d6a7;
            color: black;
            transition: background-color 0.3s ease;
        }

            .mbway-form-wrapper button:hover {
                background-color: #81c784;
            }

        .mbway-form-wrapper a {
            background-color: #eeeeee;
            color: #333;
            border: 1px solid #ccc;
            transition: background-color 0.3s ease;
        }

            .mbway-form-wrapper a:hover {
                background-color: #ddd;
            }
</style>

<div class="mbway-form-wrapper">
    <div class="container">
        <h2>Multibanco</h2>

        <form method="post">
            <div>
                Carregamento por Entidade e Referência
            </div>

            <div>
                <label asp-for="Valor"></label>
                <input asp-for="Valor" type="number" min="5" max="250" required aria-required="true" aria-describedby="valor-info" />
                <span asp-validation-for="Valor" class="text-danger" role="alert" aria-live="assertive"></span>
                <span id="valor-info">Escolha um valor entre 5 € e 250 €</span>
            </div>

            <div>
                <button type="submit" asp-controller="Charging" asp-action="MultibancoConfirmation">GERAR</button>
                <a asp-controller="Charging" asp-action="Index">VOLTAR</a>
            </div>

        </form>

    </div>
    <br />
    <br />
</div>

