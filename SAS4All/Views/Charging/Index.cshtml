@{
    ViewData["Title"] = "Carregamentos";
}

<style>
    .center-box {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
    }

    .charging-box {
        border: 1px solid #00bcd4;
        padding: 20px 30px;
        max-width: 800px;
        width: 100%;
        background-color: white;
        font-family: Arial, sans-serif;
    }

    .charging-option {
        display: flex;
        align-items: center;
        margin-top: 20px;
    }

    /* Apenas para a imagem de Multibanco */
    .mb-img {
        height: 60px;
        margin-right: 50px; /* margem maior entre imagem e texto */
        object-fit: contain;
    }

    /* Apenas para a imagem de MB WAY */
    .mbway-img {
        height: 75px;
        margin-right: 30px;
        object-fit: contain;
    }

    /* Empurra a opção MB ligeiramente à direita para alinhar melhor */
    .mb-option {
        margin-left: 15px;
    }

    .charging-option span {
        flex-grow: 1;
        display: flex;
        align-items: center;
        font-size: 16px;
        color: #333;
    }

    .charging-option button {
        background-color: white;
        border: 2px solid #a5d6a7;
        color: #4caf50;
        padding: 7px 20px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .charging-option button:hover {
            background-color: #e8f5e9;
        }
</style>

<div class="center-box">
    <div class="charging-box">
        <p>
            Já pode começar a utilizar o nosso serviço de carregamentos! Selecione uma das opções abaixo e comece já a usufruir do serviço comodamente, de forma eficaz e segura.
        </p>

        <!-- Opção Multibanco -->
        <div class="charging-option mb-option" role="region" aria-labelledby="multibanco-title">
            <img src="~/images/mb.png" alt="Multibanco" class="mb-img" />
            <span id="multibanco-title" style="margin-left: 30px">Carregamento com Entidade e Referência</span>
            <button onclick="location.href='@Url.Action("Multibanco", "Charging")'" 
                    aria-label="Carregar com Multibanco - Entidade e Referência"
                    role="button">
                Carregar
            </button>
        </div>

        <!-- Opção MB WAY -->
        <div class="charging-option" role="region" aria-labelledby="mbway-title">
            <img src="~/images/mbway.png" alt="MB WAY" class="mbway-img" />
            <span id="mbway-title">Carregamento por telemóvel</span>
            <button onclick="location.href='@Url.Action("MBWay", "Charging")'"
                    aria-label="Carregar com MB WAY - Pagamento por telemóvel"
                    role="button">
                Carregar
            </button>
        </div>

    </div>
</div>
