@model SAS4All.Models.AcessibilidadeModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Acessibilidade</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin-bottom: 150px;
        }

        .container {
            border: 1px solid #ccc;
            padding: 20px;
            margin-top: 20px;
        }

        .section {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 10px;
        }

            .form-group label {
                display: inline-block;
                width: 200px;
            }

            .form-group input[type="checkbox"] {
                transform: scale(1.5);
                margin-right: 10px;
            }

            .form-group select {
                width: 100px;
            }

        .atalhos-table {
            width: 100%;
            border-collapse: collapse;
        }

            .atalhos-table th,
            .atalhos-table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .atalhos-table th {
                background-color: #f4f4f4;
            }

        .buttons {
            text-align: right;
        }

            .buttons button {
                margin-left: 10px;
            }

        :focus {
            outline: 3px solid blue;
            outline-offset: 2px;
        }

        .atalho-display {
            padding: 5px 10px;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 4px;
            min-width: 80px;
            display: inline-block;
            text-align: center;
            font-family: monospace;
            font-weight: bold;
        }

        .comando-voz {
            color: #666;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container" role="main">
        <h2 id="page-title">Acessibilidade</h2>
        <br />
        <form asp-action="GuardarDefinicoes" method="post" role="form">
            <!-- Seção de Acessibilidade -->
            <div class="section" aria-labelledby="acessibilidade-title">
                <h3 id="acessibilidade-title">Configurações de Acessibilidade</h3>

                <div class="form-group">
                    <label for="modo-escuro">Modo Escuro:</label>
                    <input type="checkbox" id="modo-escuro" asp-for="ModoEscuro" aria-checked="@Model.ModoEscuro.ToString().ToLower()" />
                </div>

                <div class="form-group">
                    <label for="alto-contraste">Alto Contraste:</label>
                    <input type="checkbox" id="alto-contraste" asp-for="AltoContraste" aria-checked="@Model.AltoContraste.ToString().ToLower()" />
                </div>

                <div class="form-group">
                    <label for="tamanho-fonte">Tamanho da Fonte:</label>
                    <select id="tamanho-fonte" asp-for="TamanhoFonte" style="width:auto">
                        <option value="16px">Normal (16px)</option>
                        <option value="18px">Médio (18px)</option>
                        <option value="20px">Grande (20px)</option>
                        <option value="22px">Muito Grande (22px)</option>
                        <option value="24px">Extra Grande (24px)</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="espacamento">Espaçamento de Texto:</label>
                    <select id="espacamento" asp-for="Espacamento" style="width:auto">
                        <option value="normal">Normal</option>
                        <option value="wide">Amplo</option>
                        <option value="extra-wide">Extra Amplo</option>
                    </select>
                </div>
            </div>

            <!-- Seção de Configuração de Atalhos -->
            <div class="section" aria-labelledby="atalhos-title">
                <h3 id="atalhos-title">Atalhos de Teclado e Comandos de Voz</h3>
                <p>Esta tabela mostra os atalhos de teclado e comandos de voz disponíveis no sistema.</p>

                <table class="atalhos-table" aria-label="Tabela de atalhos de teclado e comandos de voz">
                    <thead>
                        <tr>
                            <th scope="col">Opção</th>
                            <th scope="col">Atalho de Teclado</th>
                            <th scope="col">Comando de Voz</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Página Principal</td>
                            <td>
                                <span class="atalho-display">H</span>
                            </td>
                            <td class="comando-voz">
                                "início"
                            </td>
                        </tr>
                        <tr>
                            <td>Acessibilidade</td>
                            <td>
                                <span class="atalho-display">A</span>
                            </td>
                            <td class="comando-voz">
                                "acessibilidade"
                            </td>
                        </tr>
                        <tr>
                            <td>Perfil</td>
                            <td>
                                <span class="atalho-display">P</span>
                            </td>
                            <td class="comando-voz">
                                "perfil"
                            </td>
                        </tr>
                        <tr>
                            <td>Movimentos</td>
                            <td>
                                <span class="atalho-display">M</span>
                            </td>
                            <td class="comando-voz">
                                "movimentos"
                            </td>
                        </tr>
                        <tr>
                            <td>Refeições</td>
                            <td>
                                <span class="atalho-display">R</span>
                            </td>
                            <td class="comando-voz">
                                "refeições"
                            </td>
                        </tr>
                        <tr>
                            <td>Carregamentos</td>
                            <td>
                                <span class="atalho-display">C</span>
                            </td>
                            <td class="comando-voz">
                                "carregamentos"
                            </td>
                        </tr>
                        <tr>
                            <td>Alterar PIN</td>
                            <td>
                                <span class="atalho-display">I</span>
                            </td>
                            <td class="comando-voz">
                                "pin"
                            </td>
                        </tr>
                        <tr>
                            <td>MBWay (em Carregamentos)</td>
                            <td>
                                <span class="atalho-display">W</span>
                            </td>
                            <td class="comando-voz">
                                "mbway"
                            </td>
                        </tr>
                        <tr>
                            <td>Multibanco (em Carregamentos)</td>
                            <td>
                                <span class="atalho-display">B</span>
                            </td>
                            <td class="comando-voz">
                                "multibanco"
                            </td>
                        </tr>
                        <tr>
                            <td>Política de Privacidade</td>
                            <td>
                                <span class="atalho-display">V</span>
                            </td>
                            <td class="comando-voz">
                                "privacidade"
                            </td>
                        </tr>
                    </tbody>
                </table>

                <p style="margin-top: 10px; font-size: 0.9em;">Os comandos de voz podem ser ativados clicando no botão de microfone na barra inferior.</p>
            </div>

            <!-- Botões de Ação -->
            <div class="buttons">
                <button type="button" onclick="history.back()" aria-label="Voltar à página anterior">Voltar</button>
                <button type="submit" aria-label="Guardar definições">Guardar</button>
            </div>
        </form>
    </div>
</body>
</html>