    </div>    <script>        // Função para alternar o modo escuro
        function toggleDarkMode(enabled) {
            const highContrastCheckbox = document.getElementById('alto-contraste');
            if (enabled && !highContrastCheckbox.checked) {
                document.body.classList.add('dark-mode');
                document.documentElement.setAttribute('data-theme', 'dark');
            } else {
                document.body.classList.remove('dark-mode');
                document.documentElement.removeAttribute('data-theme');
            }
        }

        // Função para alternar o alto contraste
        function toggleHighContrast(enabled) {
            if (enabled) {
                document.body.classList.add('high-contrast');
                document.body.classList.remove('dark-mode'); // Alto contraste tem prioridade
                document.documentElement.setAttribute('data-contrast', 'high');
                document.documentElement.removeAttribute('data-theme');
            } else {
                document.body.classList.remove('high-contrast');
                document.documentElement.removeAttribute('data-contrast');
                // Restaura o modo escuro se estiver ativo
                const darkModeCheckbox = document.getElementById('modo-escuro');
                if (darkModeCheckbox && darkModeCheckbox.checked) {
                    document.body.classList.add('dark-mode');
                    document.documentElement.setAttribute('data-theme', 'dark');
                }
            }
        }

        function updateSpacingDemo(value) {
            const demoText = document.querySelector('.spacing-demo-text');
            demoText.className = 'spacing-demo-text';
            
            let demoContent = '';
            switch(value) {
                case 'normal':
                    demoText.classList.add('spacing-normal');
                    demoContent = 'Este é um exemplo de texto com espaçamento normal. O texto é apresentado com o espaçamento padrão entre linhas e letras, adequado para leitura em condições normais.';
                    break;
                case 'wide':
                    demoText.classList.add('spacing-wide');
                    demoContent = 'Este texto demonstra o espaçamento amplo. Observe como as letras e linhas têm mais espaço entre si, facilitando a leitura para pessoas com dificuldades visuais ou dislexia.';
                    break;
                case 'extra-wide':
                    demoText.classList.add('spacing-extra-wide');
                    demoContent = 'Com o espaçamento extra amplo, cada letra e linha tem um espaço maior. Esta configuração é especialmente útil para pessoas que precisam de maior distinção entre os elementos do texto.';
                    break;
            }
            demoText.textContent = demoContent;
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Inicializa a demonstração de espaçamento
            const espacamentoSelect = document.getElementById('espacamento');
            if (espacamentoSelect) {
                updateSpacingDemo(espacamentoSelect.value);
            }

            const table = document.querySelector('.atalhos-table');
            const focusableElements = table.querySelectorAll('[tabindex="0"]');
            
            // Adiciona navegação por teclado
            table.addEventListener('keydown', function(e) {
                const currentIndex = Array.from(focusableElements).indexOf(document.activeElement);
                
                switch(e.key) {
                    case 'ArrowRight':
                        e.preventDefault();
                        if (currentIndex < focusableElements.length - 1) {
                            focusableElements[currentIndex + 1].focus();
                        }
                        break;
                    case 'ArrowLeft':
                        e.preventDefault();
                        if (currentIndex > 0) {
                            focusableElements[currentIndex - 1].focus();
                        }
                        break;
                    case 'ArrowDown':
                        e.preventDefault();
                        if (currentIndex + 3 < focusableElements.length) {
                            focusableElements[currentIndex + 3].focus();
                        }
                        break;
                    case 'ArrowUp':
                        e.preventDefault();
                        if (currentIndex - 3 >= 0) {
                            focusableElements[currentIndex - 3].focus();
                        }
                        break;
                    case 'Home':
                        e.preventDefault();
                        focusableElements[0].focus();
                        break;
                    case 'End':
                        e.preventDefault();
                        focusableElements[focusableElements.length - 1].focus();
                        break;
                }
            });

            // Adiciona feedback visual ao focar
            focusableElements.forEach(element => {
                element.addEventListener('focus', function() {
                    this.setAttribute('aria-selected', 'true');
                });
                
                element.addEventListener('blur', function() {
                    this.removeAttribute('aria-selected');
                });
            });            // Configurar event listeners para modo escuro e alto contraste
            const darkModeCheckbox = document.getElementById('modo-escuro');
            const highContrastCheckbox = document.getElementById('alto-contraste');

